<body>
    <main class="wrapper">
        <div class="container">
            <div class="faq">
                <h1>Frequently Asked Questions</h1>
                <div id="faq-content">
                    <!-- FAQs will be loaded here -->
                </div>
            </div>
        </div>
    </main>

    <!-- Modal for editing FAQs -->
    <div id="edit-faq-modal" style="display: none;">
        <div>
            <label for="faq-question">Question:</label>
            <input type="text" id="faq-question" />
        </div>
        <div>
            <label for="faq-answer">Answer:</label>
            <textarea id="faq-answer"></textarea>
        </div>
        <button id="save-faq-btn">Save</button>
        <button id="cancel-faq-btn">Cancel</button>
    </div>
</body>
